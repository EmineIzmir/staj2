package sikayetVar;

import java.io.PrintWriter;

import org.eclipse.jetty.client.HttpClient;
import org.eclipse.jetty.client.api.ContentResponse;
import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;

public class Client {
	private HttpClient httpClient = new HttpClient();
	private Document htmlCodeOfPage;
	public void client(String url) throws Exception{
		
		httpClient.setFollowRedirects(false);
		httpClient.start();
		ContentResponse response = httpClient.GET(url);
		htmlCodeOfPage = Jsoup.parse(response.getContentAsString());
		/*PrintWriter writer = new PrintWriter("html.txt", "UTF-8");
		writer.print(response.getContentAsString());
		writer.close();*/
		httpClient.stop();
	}

}
